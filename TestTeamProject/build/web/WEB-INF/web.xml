        <auth-method>BASIC</auth-method>
        <realm-name>file</realm-name>
    </login-config>
    <security-role>
        <description/>
        <role-name>Emp</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>Customer</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>Dept</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>Ord</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>Item</role-name>
    </security-role>
